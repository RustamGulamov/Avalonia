<Window x:Class="Test.MainWindow"
        xmlns="https://github.com/grokys/Avalonia"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="500" Height="500">
    <Window.Resources>
        <Style x:Key="Yellow"  TargetType="{x:Type TextBlock}">
            <Setter Property="Background" Value="Yellow"/>
        </Style>
    </Window.Resources>
    <Border Background="Red" BorderBrush="Black" BorderThickness="4" CornerRadius="8" Margin="8" Padding="8" Name="border">
        <TextBlock Name="textBlock" VerticalAlignment="Center" HorizontalAlignment="Center">
            Hello World!
        </TextBlock>
    </Border>
</Window>        

